<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View"/>

        <variable
            name="messageModel"
            type="com.layer.xdk.ui.message.MessageModelCardViewModel"/>
    </data>

    <LinearLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@{messageModel.nextPartOfCluster ? @dimen/xdk_ui_message_cluster_space : @dimen/xdk_ui_message_item_top_bottom_margin}"
        android:layout_marginTop="@{messageModel.previousPartOfCluster ? 0.0f : @dimen/xdk_ui_message_item_top_bottom_margin}"
        android:background="@drawable/xdk_ui_item_foreground_selector"
        android:duplicateParentState="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/date_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@{messageModel.dateTime}"
            android:layout_marginRight="@dimen/xdk_ui_message_item_group_day_and_time_margin"
            android:layout_marginEnd="@dimen/xdk_ui_message_item_group_day_and_time_margin"
            android:layout_marginTop="@dimen/xdk_ui_message_item_time_group_padding_top"
            android:layout_marginBottom="@dimen/xdk_ui_message_item_time_group_padding_bottom"
            android:textColor="@color/xdk_ui_text_gray"
            android:textSize="@dimen/xdk_ui_text_size_message_item_metadata"
            android:visibility="@{messageModel.shouldShowDateTimeForMessage ? View.VISIBLE : View.GONE}"/>

        <TextView
            android:id="@+id/senderName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/xdk_ui_message_item_sender_margin_bottom"
            android:layout_marginLeft="@dimen/xdk_ui_message_item_sender_margin_left"
            android:layout_marginStart="@dimen/xdk_ui_message_item_sender_margin_left"
            android:text="@{messageModel.senderName}"
            android:textColor="@color/xdk_ui_text_gray"
            android:textSize="@dimen/xdk_ui_text_size_message_item_metadata"
            android:visibility="@{messageModel.shouldShowDisplayName ? View.VISIBLE : View.GONE}"/>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/xdk_ui_message_item_avatar_padding_left"
            android:layout_marginStart="@dimen/xdk_ui_message_item_avatar_padding_left">

            <FrameLayout
                android:id="@+id/avatar_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/xdk_ui_message_item_padding"
                android:visibility="@{messageModel.shouldDisplayAvatarSpace ? View.VISIBLE : View.GONE}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHeight_default="wrap"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0"
                app:layout_constraintWidth_default="wrap">

                <com.layer.xdk.ui.avatar.AvatarView
                    android:id="@+id/avatar"
                    android:layout_width="@dimen/xdk_ui_avatar_width"
                    android:layout_height="@dimen/xdk_ui_avatar_height"
                    android:visibility="@{messageModel.avatarVisibility ? View.VISIBLE : View.INVISIBLE}"
                    app:participants="@{messageModel.participants}"/>

                <com.layer.xdk.ui.presence.PresenceView
                    android:id="@+id/presence"
                    android:layout_width="@dimen/xdk_ui_avatar_presence_height"
                    android:layout_height="@dimen/xdk_ui_avatar_presence_height"
                    android:layout_gravity="bottom|right"
                    android:visibility="@{messageModel.presenceVisible ? View.VISIBLE : View.INVISIBLE}"
                    app:participants="@{messageModel.participants}"/>

            </FrameLayout>

            <ViewStub
                android:id="@+id/message_view_stub"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/xdk_ui_padding_normal"
                android:layout_marginLeft="@dimen/xdk_ui_padding_normal"
                android:layout_marginRight="@dimen/xdk_ui_padding_normal"
                android:layout_marginStart="@dimen/xdk_ui_padding_normal"
                android:background="@drawable/xdk_ui_message_viewer_background"
                android:minHeight="@dimen/xdk_ui_message_item_cell_min_height"
                android:minWidth="@dimen/xdk_ui_message_item_cell_min_width"
                android:padding="@dimen/xdk_ui_message_viewer_background_border_stroke_width"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/current_user_avatar_container"
                app:layout_constraintHeight_default="wrap"
                app:layout_constraintStart_toEndOf="@id/avatar_container"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.5"
                app:layout_constraintWidth_default="wrap"/>

            <FrameLayout
                android:id="@+id/current_user_avatar_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/xdk_ui_message_item_padding"
                android:paddingLeft="@dimen/xdk_ui_avatar_left_padding_message"
                android:paddingStart="@dimen/xdk_ui_avatar_left_padding_message"
                android:visibility="@{messageModel.shouldShowAvatarForCurrentUser ? View.VISIBLE : View.GONE}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_default="wrap"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_default="wrap">

                <com.layer.xdk.ui.avatar.AvatarView
                    android:id="@+id/current_user_avatar"
                    android:layout_width="@dimen/xdk_ui_avatar_width"
                    android:layout_height="@dimen/xdk_ui_avatar_height"
                    android:visibility="@{messageModel.shouldCurrentUserAvatarBeVisible ? View.VISIBLE : View.INVISIBLE}"
                    app:participants="@{messageModel.participants}"/>

                <com.layer.xdk.ui.presence.PresenceView
                    android:id="@+id/current_user_presence"
                    android:layout_width="@dimen/xdk_ui_avatar_presence_height"
                    android:layout_height="@dimen/xdk_ui_avatar_presence_height"
                    android:layout_gravity="bottom|right"
                    android:visibility="@{messageModel.shouldCurrentUserPresenceBeVisible ? View.VISIBLE : View.INVISIBLE}"
                    app:participants="@{messageModel.participants}"/>

            </FrameLayout>

        </android.support.constraint.ConstraintLayout>

        <TextView
            android:id="@+id/receipt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginEnd="@dimen/xdk_ui_message_item_receipt_margin"
            android:layout_marginRight="@dimen/xdk_ui_message_item_receipt_margin"
            android:text="@{messageModel.readReceipt}"
            android:textColor="@color/xdk_ui_text_gray"
            android:textSize="@dimen/xdk_ui_text_size_message_item_metadata"
            android:visibility="@{messageModel.readReceiptVisible ? View.VISIBLE : View.GONE}"/>

    </LinearLayout>
</layout>