<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="com.layer.ui.message.product.ProductMessageModel"/>

        <variable
            name="viewModel"
            type="ProductMessageModel"/>
    </data>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/root"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="@dimen/ui_product_message_max_width"
        android:paddingBottom="@dimen/layer_ui_margin_small">

        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/ui_product_message_image_width"
            android:layout_height="@dimen/ui_product_message_image_height"
            android:layout_marginBottom="@dimen/layer_ui_margin_tiny"
            android:scaleType="centerCrop"
            app:layout_constraintHeight_default="wrap"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_default="wrap"
            app:loadFrom="@{viewModel.imageRequestParameters}"
            app:usingImageLoader="@{viewModel.imageCacheWrapper}"
            app:visibleOrGone="@{viewModel.imageRequestParameters!=null}"/>

        <TextView
            android:id="@+id/brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/layer_ui_margin_tiny"
            android:layout_marginEnd="@dimen/layer_ui_margin_large"
            android:layout_marginLeft="@dimen/layer_ui_margin_large"
            android:layout_marginRight="@dimen/layer_ui_margin_large"
            android:layout_marginStart="@dimen/layer_ui_margin_large"
            android:layout_marginTop="@dimen/layer_ui_margin_small"
            android:gravity="start"
            android:maxWidth="@dimen/ui_product_message_field_max_width"
            android:text="@{viewModel.brand}"
            android:textColor="@color/layer_ui_text_gray"
            android:textSize="@dimen/ui_product_message_brand_text_size"
            app:layout_constraintHeight_default="wrap"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="90"
            app:visibleOrGone="@{viewModel.brand!=null}"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/layer_ui_margin_tiny"
            android:layout_marginEnd="@dimen/layer_ui_margin_large"
            android:layout_marginLeft="@dimen/layer_ui_margin_large"
            android:layout_marginRight="@dimen/layer_ui_margin_large"
            android:layout_marginStart="@dimen/layer_ui_margin_large"
            android:layout_marginTop="@dimen/layer_ui_margin_tiny"
            android:gravity="start"
            android:maxWidth="@dimen/ui_product_message_field_max_width"
            android:text="@{viewModel.name}"
            android:textColor="@color/layer_ui_text_black"
            android:textSize="@dimen/ui_product_message_name_text_size"
            app:layout_constraintHeight_default="wrap"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/brand"
            app:layout_constraintWidth_default="wrap"
            app:visibleOrGone="@{viewModel.name!=null}"/>

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/layer_ui_margin_tiny"
            android:layout_marginEnd="@dimen/layer_ui_margin_large"
            android:layout_marginLeft="@dimen/layer_ui_margin_large"
            android:layout_marginRight="@dimen/layer_ui_margin_large"
            android:layout_marginStart="@dimen/layer_ui_margin_large"
            android:layout_marginTop="@dimen/layer_ui_margin_tiny"
            android:gravity="start"
            android:maxWidth="@dimen/ui_product_message_field_max_width"
            android:text="@{viewModel.price}"
            android:textColor="@color/layer_ui_text_black"
            android:textSize="@dimen/ui_product_message_name_price_size"
            app:layout_constraintHeight_default="wrap"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/name"
            app:layout_constraintWidth_default="wrap"
            app:visibleOrGone="@{viewModel.price!=null}"/>

        <com.layer.ui.message.product.ProductOptionsView
            android:id="@+id/options_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/layer_ui_margin_small"
            android:layout_marginEnd="@dimen/layer_ui_margin_large"
            android:layout_marginLeft="@dimen/layer_ui_margin_large"
            android:layout_marginRight="@dimen/layer_ui_margin_large"
            android:layout_marginStart="@dimen/layer_ui_margin_large"
            android:layout_marginTop="@dimen/layer_ui_margin_tiny"
            android:maxWidth="@dimen/ui_product_message_field_max_width"
            android:orientation="vertical"
            app:layout_constraintHeight_default="wrap"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/price"
            app:layout_constraintWidth_default="wrap"
            app:setOptions="@{viewModel.options}"/>

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/layer_ui_margin_small"
            android:layout_marginEnd="@dimen/layer_ui_margin_large"
            android:layout_marginLeft="@dimen/layer_ui_margin_large"
            android:layout_marginRight="@dimen/layer_ui_margin_large"
            android:layout_marginStart="@dimen/layer_ui_margin_large"
            android:layout_marginTop="@dimen/layer_ui_margin_small"
            android:gravity="start"
            android:paddingEnd="@dimen/layer_ui_margin_x_large"
            android:paddingRight="@dimen/layer_ui_margin_x_large"
            android:text="@{viewModel.productDescription}"
            android:textColor="@color/layer_ui_text_black"
            android:textSize="@dimen/ui_product_message_name_price_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_default="wrap"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/options_layout"
            app:layout_constraintWidth_default="wrap"
            app:visibleOrGone="@{viewModel.productDescription!=null}"/>

    </android.support.constraint.ConstraintLayout>
</layout>